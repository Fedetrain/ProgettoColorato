<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <TextView
        android:id="@+id/textView2"
        android:layout_width="379dp"
        android:layout_height="wrap_content"
        android:text="Prenota un posto"
        android:textSize="24sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/textView9"
        android:layout_width="379dp"
        android:layout_height="wrap_content"
        android:text="Orario"

        android:textStyle="bold" />

    <TextView
        android:id="@+id/textView8"
        android:layout_width="379dp"
        android:layout_height="wrap_content"
        android:text="Data"

        android:textStyle="bold" />

    <Button
        android:id="@+id/buttonPrenota"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingStart="16dp"
        android:paddingTop="8dp"
        android:paddingEnd="16dp"
        android:paddingBottom="8dp"
        android:text="Prenota" />

    <Spinner
        android:id="@+id/spinnerOrario"
        android:layout_width="379dp"
        android:layout_height="wrap_content"
        android:prompt="@string/seleziona_orario_prompt" />

    <EditText
        android:id="@+id/editTextData"
        android:layout_width="379dp"
        android:layout_height="wrap_content"
        android:clickable="false"
        android:hint="Seleziona la data"
        android:inputType="date"
        android:padding="8dp" />

    <Spinner
        android:id="@+id/spinnerPosti"
        android:layout_width="170dp"
        android:layout_height="41dp"
        android:prompt="@string/seleziona_posto_prompt" />

    <Spinner
        android:id="@+id/spinner"
        android:layout_width="175dp"
        android:layout_height="42dp" />

    <TextView
        android:id="@+id/textView10"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Sala"

        android:textSize="20sp" />

    <TextView
        android:id="@+id/textView11"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="TextView"
        android:textSize="16sp" />

</LinearLayout>
